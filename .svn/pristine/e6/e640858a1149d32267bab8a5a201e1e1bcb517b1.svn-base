<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 该文件必须和相应的Dao接口文件同名，并在同一路径下 -->
<mapper namespace="com.htinf.sm.dao.ServiceConfigDao">

    <select id="selectAllServiceConfig" parameterType="com.htinf.sm.model.ServiceConfig"
            resultType="com.htinf.sm.model.ServiceConfig">
        SELECT
            unid,
            uuid,
            serverUuid,
            typeId,
            name,
            serviceName,
            port,
            manageURL,
            stateCommand,
            installPath,
            stopCommand,
            startCommand,
            restartCommand,
            backupCommand,
            logPath,
            create_time,
            update_time,
            status
        FROM
            t_sm_service_config
        <where>
            1 = 1
            <if test="unid != null and unid != '' ">
                AND unid = #{unid}
            </if>
            <if test="uuid != null and uuid != ''">
                AND uuid = #{uuid}
            </if>
            <if test="serverUuid != null and serverUuid != ''">
                AND serverUuid = #{serverUuid}
            </if>
            <if test="typeId != null ">
                AND typeId = #{typeId}
            </if>
            <if test="name != null and name != ''">
                AND name = #{name}
            </if>
            <if test="serviceName != null and serviceName != ''">
                AND serviceName = #{serviceName}
            </if>
            <if test="status != null ">
                AND status = #{status}
            </if>
        </where>
        ORDER BY unid DESC
    </select>

</mapper>