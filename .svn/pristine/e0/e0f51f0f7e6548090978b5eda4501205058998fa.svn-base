<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 该文件必须和相应的Dao接口文件同名，并在同一路径下 -->
<mapper namespace="com.htinf.sm.dao.ServiceTypeDao">

    <select id="selectAllServerType" parameterType="com.htinf.sm.model.ServiceType" resultType="com.htinf.sm.model.ServiceType">
        SELECT
            unid,
            uuid,
            name,
            ifCluster,
            ifShow,
            clusterSC,
            create_time,
            update_time,
            status
        FROM
            t_sm_service_type
        <where>
            1 = 1
            <if test="unid != null and unid != '' ">
                AND unid = #{unid}
            </if>
            <if test="uuid != null and uuid != ''">
                AND uuid = #{uuid}
            </if>
            <if test="name != null and name != ''">
                AND name = #{name}
            </if>
            <if test="ifCluster != null and ifCluster != ''">
                AND ifCluster = #{ifCluster}
            </if>
            <if test="ifShow != null and ifShow != ''">
                AND ifShow = #{ifShow}
            </if>
            <if test="status != null ">
                AND status = #{status}
            </if>
        </where>
        ORDER BY unid DESC
    </select>

</mapper>