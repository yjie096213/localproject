<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 该文件必须和相应的Dao接口文件同名，并在同一路径下 -->
<mapper namespace="com.htinf.sm.dao.ServiceTypeDao">

    <select id="selectAllServerType" resultType="com.htinf.sm.model.ServiceType">
        SELECT
            id,
            NAME,
            ifCluster,
            ifShow,
            clusterSC
        FROM
            serviceType
        <where>
            1 = 1
            <if test="name != null and name != ''">
                AND name = #{name}
            </if>
            <if test="ifCluster != null and ifCluster != ''">
                AND ifCluster = #{ifCluster}
            </if>
            <if test="ifShow != null and ifShow != ''">
                AND ifShow = #{ifShow}
            </if>
        </where>
        ORDER BY id DESC
    </select>

</mapper>