<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 该文件必须和相应的Dao接口文件同名，并在同一路径下 -->
<mapper namespace="com.htinf.sm.dao.DeviceConfigDao">

    <select id="selectAllDeviceConfig" parameterType="com.htinf.sm.model.DeviceConfig" resultType="com.htinf.sm.model.DeviceConfig">
        SELECT
            unid,
            uuid,
            deviceIp,
            userName,
            password,
            port,
            url,
            create_time,
            update_time,
            status
        FROM
            t_sm_device_config
        <where>
            1 = 1
            <if test="unid != null and unid != '' ">
                AND unid = #{unid}
            </if>
            <if test="uuid != null and uuid != ''">
                AND uuid = #{uuid}
            </if>
            <if test="deviceIp != null and deviceIp != ''">
                AND deviceIp = #{deviceIp}
            </if>
            <if test="userName != null and userName != ''">
                AND userName = #{userName}
            </if>
            <if test="status != null ">
                AND status = #{status}
            </if>
        </where>
        ORDER BY unid DESC
    </select>

</mapper>